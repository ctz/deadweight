<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project goalone with Jar-in-Jar Loader">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar">
        <jar destfile="bin/deadweight.jar">
            <manifest>
                <attribute name="Main-Class" value="org.eclipse.jdt.internal.jarinjarloader.JarRsrcLoader"/>
                <attribute name="Rsrc-Main-Class" value="Runme"/>
                <attribute name="Class-Path" value="."/>
                <attribute name="Rsrc-Class-Path" value="./ gdx-backend-lwjgl-natives.jar gdx-backend-lwjgl.jar gdx-natives.jar gdx.jar json.jar"/>
            </manifest>
            <zipfileset src="jar-in-jar-loader.zip"/>
            <fileset dir="D:/android/goalone/bin" excludes="deadweight.jar"/>
            <zipfileset dir="D:\android\goalone\libs" includes="gdx-backend-lwjgl-natives.jar"/>
            <zipfileset dir="D:\android\goalone\libs" includes="gdx-backend-lwjgl.jar"/>
            <zipfileset dir="D:\android\goalone\libs" includes="gdx-natives.jar"/>
            <zipfileset dir="D:\android\goalone\libs" includes="gdx.jar"/>
            <zipfileset dir="D:\android\goalone\libs" includes="json.jar"/>
            <zipfileset dir="D:\android\goalone\levels" prefix="levels"/>
            <zipfileset dir="D:\android\goalone\gfx" prefix="gfx"/>
            <zipfileset dir="D:\android\goalone\sfx" prefix="sfx"/>
        </jar>
    </target>
</project>
